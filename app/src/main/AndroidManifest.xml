<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.uptfix">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.screen.portrait" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity android:name=".ProblemDetails"         android:screenOrientation="portrait"/>
        <activity android:name=".ProblemSender"         android:screenOrientation="portrait"/>
        <activity android:name=".ProblemHistoryAdmin"         android:screenOrientation="portrait" />
        <activity android:name=".ProblemHistoryStudent"         android:screenOrientation="portrait"/>
        <activity android:name=".ProfileInfo"         android:screenOrientation="portrait"/>
        <activity android:name=".MainInterfaceAdmin"         android:screenOrientation="portrait" />
        <activity android:name=".ResetPassword"         android:screenOrientation="portrait" />
        <activity android:name=".MainInterfaceStudent"        android:screenOrientation="portrait" />
        <activity android:name=".RegisterStudent"         android:screenOrientation="portrait" />
        <activity android:name=".RegisterAdmin"          android:screenOrientation="portrait"/>
        <activity android:name=".RegisterPage"        android:screenOrientation="portrait" />
        <activity android:name=".MainActivity"         android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>